        <activity android:name="FrameMain"
                  android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="FrameRegister"  android:screenOrientation="portrait"/>
        <activity android:name="FrameEdit"  android:screenOrientation="portrait" />
        <activity android:name="FrameContent"  android:screenOrientation="portrait"/>
        <activity android:name="FrameContentInfo"  android:screenOrientation="portrait" />
        <activity android:name="FramePhoto"  android:screenOrientation="portrait" />
        <activity android:name="FrameSideMenu"  android:screenOrientation="portrait" />
    </application>
</manifest> 
